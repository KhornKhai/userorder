        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Shop"
        tools:targetApi="31" >
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".StartActivity" />
        <activity android:name=".DetailActivity" />

        <activity android:name=".AddCategoryActivity" />
        <activity android:name=".AddProductsActivity" />
        <activity android:name=".UserOrdersActivity" />
        <activity android:name=".UsersManagementActivity" />

        <activity android:name=".AdminActivity" />
        <activity android:name=".RegisterActivity" />

        <activity android:name=".Start" />
        <activity android:name=".StartedActivity" />
    </application>

</manifest>